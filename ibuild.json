{
  "prompts": {
     "name": {
       "type": "string",
       "label": "App name",
       "required": true
     },
     "description": {
       "type": "string",
       "label": "App description",
       "default": "An ibuild.io app",
       "required": true
     },
     "author": {
       "type": "string",
       "label": "Author"
     },
     "private": {
       "type": "boolean",
       "default": true
     },
    "unit": {
      "type": "confirm",
      "message": "copy source files"
    }
   },
   "filters": {
    "src/**/*": "unit"
  }
}
